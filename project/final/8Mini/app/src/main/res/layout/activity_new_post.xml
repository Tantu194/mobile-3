<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.peter.a8mini.ActivityNewPost">

    <ImageView
        android:id="@+id/imgPost"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_photo_24dp" android:contentDescription="@string/todo"
        android:visibility="gone"/>
    <ToggleButton
        android:id="@+id/tgbtnPickImg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/res_bg_btn_pick_img"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:checked="false"/>
    <EditText
        android:id="@+id/etContentPost"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/res_bg_edittext"
        android:gravity="top"
        android:hint="Bạn đang nghĩ gì ?"
        android:inputType="textMultiLine"
        android:maxLength="2000"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:textAlignment="viewStart" />

</LinearLayout>
